@{
    ViewBag.Title = "Home Page";
}

<style>
    .tblProjects-container {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
    }

    .tblProjects-new-project {
        background: dodgerBlue;
        border-radius: 5px;
        color: white;
        padding: 7px;
        margin-left: 10px;
        margin-bottom: 10px;
    }

        .tblProjects-new-project:hover {
            background: #1574d0;
            cursor: pointer;
        }

    .tblProjects-title {
        margin-left: 25px;
        font-size: 13pt;
        margin-bottom: 5px;
    }

        .tblProjects-title ~ div {
            display: flex;
            align-items: center;
            margin-right: 10px;
        }

    .dataTables_wrapper table thead {
        display: none;
    }

    #tblProjects > tbody > tr > td:nth-child(2) {
        text-align: right;
    }

    #tblProjects > tbody > tr > td > a {
        margin-right: 10px;
        cursor: pointer;
    }
</style>

<div class="project">
    @*<div class="jumbotron">
            <h1>ASP.NET</h1>
            <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
            <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>*@

    <div class="row">
        <table role="grid" id="tblProjects" class="table table-striped " cellspacing="0" width="100%">
            <thead>
                <tr role="row">
                    <th style="width: 380px; outline: none; text-align:center;" class="center">

                    </th>
                    <th style="width: 40px; outline: none;" class="center">

                    </th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.projectList != null)
                {
                    foreach (var item in ViewBag.projectList)
                    {
                        <tr role="row">
                            <td class="firstTd">
                                <div>
                                    @item.projectName
                                </div>
                            </td>
                            <td>
                                <a class="tblProjects-auth-project" data-id=@item.projectID>Security</a>
                                @*@Html.ActionLink("Security", "AuthUserPartial", "Home" , new { item.projectID }, null)*@
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div id="modal"></div>

<script>
    $(document).ready(function () {
        $('#tblProjects').dataTable({
            "dom": '<"tblProjects-container"<"tblProjects-title"><f<"tblProjects-new-project">>>t'
        });
        $('.tblProjects-title').html("<b>Projects</b>");
        $('.tblProjects-new-project').text("New Project");
        $('.tblProjects-new-project').on('click', function () {
            $("#modal").load('@Url.Action("ProjectPartial", "Home")');
        });
        $('.tblProjects-auth-project').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            $.get('@Url.Action("AuthUserPartial", "Home")', { projectID: id }, function (result) {
                $('#modal').html(result);
            });
        });
        //$('#tblProjects_filter').html('<label><input type=search" class="" placeholder="" aria-controls="tblProjects"></label>');
        //console.log($('#tblProjects > label').text());
    });
</script>
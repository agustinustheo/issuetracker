@using MVC_Final_Project.Models
@model Project

<style>
</style>

<div class="project-form-modal">
    <div id="projectForm">
        @using (Html.BeginForm("UpdateProjectAuth", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3>Add Authorized User</h3>
            <hr />
            @Html.HiddenFor(x => x.projectID, new { @value = ViewBag.projectID });
            foreach (var x in ViewBag.userList)
            {
                <div>
                    <label><input type="checkbox" name="authorizedUsers" value="@x.userID">@x.userName</label>
                </div>
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
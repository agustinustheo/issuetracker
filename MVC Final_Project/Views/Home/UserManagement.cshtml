@{
    ViewBag.Title = "User Management";
}

<style>
    .tblUser-container {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
    }

    .tblUser-new-user {
        background: dodgerBlue;
        border-radius: 5px;
        color: white;
        padding: 7px;
        margin-left: 10px;
        margin-bottom: 10px;
    }

    .tblUser-new-user:hover {
        background: #1574d0;
        cursor: pointer;
    }

    .tblUser-title {
        margin-left: 25px;
        font-size: 13pt;
        margin-bottom: 5px;
    }

    .tblUser-title ~ div {
        display: flex;
        align-items: center;
        margin-right: 10px;
    }

    .dataTables_wrapper table thead {
        display: none;
    }

    #tblUser > tbody > tr > td:nth-child(2) {
        text-align: right;
    }

    #tblUser > tbody > tr > td > a {
        margin-right: 10px;
        cursor: pointer;
    }
</style>

<div class="usermanagement">
    @*<div class="jumbotron">
            <h1>ASP.NET</h1>
            <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
            <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>*@

    <div class="row">
        <table role="grid" id="tblUser" class="table table-striped " cellspacing="0" width="100%">
            <thead>
                <tr role="row">
                    <th style="outline: none; text-align:center;" class="center">

                    </th>
                    <th style="outline: none;" class="center">

                    </th>
                    <th style="outline: none;" class="center">

                    </th>
                    <th style="outline: none;" class="center">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.userList)
                {
                    <tr role="row">
                        <td class="firstTd">
                            <div>
                                @item.userName
                            </div>
                        </td>
                        <td>
                            @if (@item.userRole == 1)
                            {
                                <div>
                                    Admin
                                </div>
                            }
                            else
                            {
                                <div>
                                    User
                                </div>
                            }
                        </td>
                        <td>
                            @if (@item.userStatus == true)
                            {
                                <div>
                                    Active
                                </div>
                            }
                            else
                            {
                                <div>
                                    Inactive
                                </div>
                            }
                        </td>

                        <td>
                            <a class="tblUser-auth-user" data-id=@item.userID>Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
<div id="modal"></div>

<script>
    $(document).ready(function () {
        $('#tblUser').dataTable({
            "dom": '<"tblUser-container"<"tblUser-title"><f<"tblUser-new-user">>>t'
        });
        $('.tblUser-title').html("<b>Users</b>");
        $('.tblUser-new-user').text("New User");
        $('.tblUser-new-user').on('click', function () {
            $("#modal").load('@Url.Action("UserPartial", "Home")');
        });
        $('.tblUser-auth-user').on('click', function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            console.log(id);
            $.get('@Url.Action("EditUserPartial", "Home")', { userID: id }, function (result) {
                $('#modal').html(result);
            });
        });
        //$('#tblProjects_filter').html('<label><input type=search" class="" placeholder="" aria-controls="tblProjects"></label>');
        //console.log($('#tblProjects > label').text());
    });
</script>